# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

# TypeScript and JavaScript
[*.{ts,js}]
indent_size = 2
quote_type = single

# JSON files
[*.json]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# SCSS/CSS files
[*.{scss,css}]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Package.json
[package.json]
indent_size = 2

# Angular specific files
[angular.json]
indent_size = 2

[tsconfig*.json]
indent_size = 2

# Configuration files
[{*.config.js,*.config.ts}]
indent_size = 2

# Cypress files
[cypress/**/*.{js,ts}]
indent_size = 2

# Test files
[*.{spec,test}.ts]
indent_size = 2

# Environment files
[*.env*]
indent_size = 2

# Docker files
[{Dockerfile,docker-compose*.yml}]
indent_size = 2

# GitHub workflows
[.github/**/*.yml]
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Windows batch files
[*.bat]
end_of_line = crlf